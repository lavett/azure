{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ServerName": {
      "type": "String",
      "defaultValue": "StudyServer",
      "metadata": {
        "description": "Name of the servers maximum of 15 letters"
      }
    },
    "VMCount": {
      "type": "int",
      "defaultValue": 5,
      "metadata": {
        "description": "Number of VMs to deploy"
      }
    },
    "Username": {
      "type": "string",
      "metadata": {
        "description": "Local Administrator username, can not be Admin or Administrator"
      }
    },
    "Password": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the local Administrator Must be at least 8 characters and one have at least one capital letter, one number and one special character"
      }
    },
    "Image": {
      "type": "string",
      "defaultValue": "Win2012",
      "allowedValues": [
        "Win2012"
      ],
      "metadata": {
        "description": "The Windows Image This will pick a fully patched image of this given Windows version"
      }
    },
    "Size": {
      "type": "string",
      "defaultValue": "Standard_D11_v2",
      "allowedValues": [
        "Standard_D11_v2"
      ],
      "metadata": {
        "description": "The size and type for the VM. For sizes see https://azure.microsoft.com/en-us/documentation/articles/virtual-machines-size-specs/"
      }
    }
  },
  "variables": {
    "Location": "[resourceGroup().location]",
    "TemplateBase": "https://raw.githubusercontent.com/lavett/azure/master/learning/",
    "TemplateBaseFile": "redeploy-new",
    "BaseName": "[resourceGroup().name]",
    "NETFile": "[concat(variables('TemplateBase'),variables('TemplateBaseFile'),variables('NETDef'),'.json')]",
    "VMFile": "[concat(variables('TemplateBase'),variables('TemplateBaseFile'),variables('VMDef'),parameters('Image'),'.json')]",
    "NETAddress": "10.0.0.0/16",
    "SRVSubnet": "10.0.0.0/24",
    "NETid": "[concat(parameters('BaseName'),parameters('NETDef'))]",
    "NSGid": "[concat(parameters('BaseName'),parameters('NSGDef'))]",
    "PIPid": "[concat(parameters('ServerName'),parameters('PIPDef'))]",
    "VNETid": "[resourceId('Microsoft.Network/virtualNetworks',variables('NETid'))]",
    "SUBRef": "[concat(variables('VNETid'),'/subnets/',variables('SUBid'))]",
    "SUBid": "[concat(parameters('BaseName'),parameters('SUBDef'))]",
    "NICid": "[concat(parameters('ServerName'),parameters('NICDef'))]",
    "SAid": "[concat(parameters('BaseName'),parameters('SADef'))]",
    "DeployImage": "win2012deployimage",
    "VHDname": "[concat('http://',variables('SAid'),'.blob.core.windows.net/','vhds','/',variables('DeployImage'),'.vhd')]",
    "OSVHDname": "[concat('http://',variables('SAid'),'.blob.core.windows.net/','vhds','/')]",
    "OSdiskname": "[parameters('ServerName')]",
    "PIPType": "Dynamic",
    "VMDef": "vm",
    "SADef": "sa",
    "NETDef": "net",
    "SUBDef": "sub",
    "NICDef": "nic",
    "PIPDef": "pip",
    "NSGDef": "nsg"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat(parameters('ServerName'),parameters('PIPDef'),copyIndex())]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('Location')]",
      "copy": {
        "name": "publicIPLoop",
        "count": "[parameters('VMCount')]"
      },
      "properties": {
        "publicIPAllocationMethod": "[parameters('PIPType')]",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('ServerName'),copyIndex())]"
        }
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('ServerName'),parameters('NICDef'),copyIndex())]",
      "location": "[parameters('Location')]",
      "copy": {
       "name": "nicLoop",
       "count": "[parameters('VMCount')]"
     },
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', variables('PIPid'),copyIndex())]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat(variables('PIPid'),copyIndex()))]"
              },
              "subnet": {
                "id": "[variables('SUBRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('ServerName'),copyIndex())]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('Location')]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('VMCount')]"
      },
      "tags": {
        "Documentation URL": "[parameters('Documentation URL')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('Size')]"
        },
        "osProfile": {
          "computername": "[concat(parameters('ServerName'),copyIndex())]",
          "adminUsername": "[parameters('Username')]",
          "adminPassword": "[parameters('Password')]",
          "windowsConfiguration": {
        "provisionVMAgent":true,
        "enableAutomaticUpdates":false
      }
    },
        "storageProfile": {
          "osDisk": {
            "name": "osdisk",
            "osType": "windows",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "image": {
              "uri": "[variables('VHDname')]"
            },
            "vhd": {
              "uri": "[concat(variables('OSVHDname'),variables('OSdiskname'),copyIndex(),'.vhd')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('NICid'),copyindex()))]"
            }
          ]
        }
      }
    }
  ]
}
