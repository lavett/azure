{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "EnvironmentPrefix": {
      "type": "String"
    },
    "EnvironmentType": {
      "type": "string"
    },
    "FunctionType": {
      "type": "String"
    },
    "NumberSuffix": {
      "type": "String"
    },
    "StorageAccountDef": {
      "type": "String"
    },
    "StorageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ]
    },
    "Location": {
      "type": "String"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[concat(parameters('EnvironmentPrefix'),parameters('EnvironmentType'),parameters('FunctionType'),parameters('NumberSuffix'),parameters('StorageAccountDef'))]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('Location')]",
      "properties": {
        "accountType": "[parameters('StorageAccountType')]"
      }
    }
  ]
}
