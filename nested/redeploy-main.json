{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Customer": {
      "type": "String",
      "metadata": {
        "description": "Prefix for the resources, Ex five letter customer name"
      }
    },
    "Environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "stg",
        "tst",
        "lab",
        "qa",
        "prd"
      ],
      "metadata": {
        "description": "Type of environment"
      }
    },
    "Function": {
      "type": "String",
      "defaultValue": "app",
      "allowedValues": [
        "app",
        "db",
        "web",
        "srv"
      ],
      "metadata": {
        "description": "Type of function / application"
      }
    },
    "Number": {
      "type": "string",
      "defaultValue": "01",
      "allowedValues": [
        "01",
        "02",
        "03",
        "04",
        "05",
        "06",
        "07",
        "08",
        "09",
        "10",
        "11",
        "12"
      ],
      "metadata": {
        "description": "Sequence number for the resource"
      }
    },
    "Username": {
      "type": "string",
      "metadata": {
        "description": "Local root or administrator username"
      }
    },
    "Password": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine. Must be at least 8 characters and one have at least one capital letter, one number and one special character"
      }
    },
    "Image": {
      "type": "string",
      "defaultValue": "Win2012",
      "allowedValues": [
        "Windows2008",
        "Win2012",
        "Win2012-SQL2012"
      ],
      "metadata": {
        "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version. Allowed values: 2008-R2-SP1, 2012-Datacenter, 2012-R2-Datacenter."
      }
    },
    "Size": {
      "type": "string",
      "defaultValue": "Standard_D1",
      "allowedValues": [
        "Standard_D1",
        "Standard_D2",
        "Standard_D3"
      ],
      "metadata": {
        "description": "The size and type for the VM."
      }
    }
  },
  "variables": {
    "Location": "[resourceGroup().location]",
    "TemplateBase": "https://raw.githubusercontent.com/lavett/azure/master/nested/",
    "TemplateBaseFile": "redeploy-new",
    "BaseSrvName": "[concat(parameters('Customer'),parameters('Environment'),parameters('Function'),parameters('Number'))]",
    "BaseName": "[concat(parameters('Customer'),parameters('Environment'))]",
    "BaseFuncName": "[concat(parameters('Customer'),parameters('Environment'),parameters('Function'))]",
    "SAFile": "[concat(variables('TemplateBase'),variables('TemplateBaseFile'),variables('SADef'),'.json')]",
    "NSGFile": "[concat(variables('TemplateBase'),variables('TemplateBaseFile'),variables('NSGDef'),parameters('Function'),'.json')]",
    "NETFile": "[concat(variables('TemplateBase'),variables('TemplateBaseFile'),variables('NETDef'),parameters('Function'),'.json')]",
    "VMFile": "[concat(variables('TemplateBase'),variables('TemplateBaseFile'),variables('VMDef'),parameters('Image'),'.json')]",
    "NETAddress": "10.10.0.0/16",
    "APPSubnet": "10.10.2.0/24",
    "PIPType": "Dynamic",
    "VMDef": "vm",
    "SADef": "sa",
    "NETDef": "net",
    "SUBDef": "sub",
    "NICDef": "nic",
    "PIPDef": "pip",
    "NSGDef": "nsg"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "newSA",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[variables('SAFile')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "BaseSrvName": {
            "value": "[variables('BaseSrvName')]"
          },
          "SADef": {
            "value": "[variables('SADef')]"
          },
          "Location": {
            "value": "[variables('Location')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "newNET",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[variables('NETFile')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "BaseName": {
            "value": "[variables('BaseName')]"
          },
          "BaseSrvName": {
            "value": "[variables('BaseSrvName')]"
          },
          "BaseFuncName": {
            "value": "[variables('BaseFuncName')]"
          },
          "NSGDef": {
            "value": "[variables('NSGDef')]"
          },
          "NETDef": {
            "value": "[variables('NETDef')]"
          },
          "NICDef": {
            "value": "[variables('NICDef')]"
          },
          "PIPDef": {
            "value": "[variables('PIPDef')]"
          },
          "SUBDef": {
            "value": "[variables('SUBDef')]"
          },
          "PIPType": {
            "value": "[variables('PIPType')]"
          },
          "NETAddress": {
            "value": "[variables('NETAddress')]"
          },
          "APPsubnet": {
            "value": "[variables('APPsubnet')]"
          },
          "Location": {
            "value": "[variables('Location')]"
          }
        }
      }
    },
  {
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'newNET')]",
        "[concat('Microsoft.Resources/deployments/', 'newSA')]"
      ],
      "name": "newVM",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[variables('VMFile')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "BaseSrvName": {
            "value": "[variables('BaseSrvName')]"
          },
          "NICDef": {
            "value": "[variables('NICDef')]"
          },
          "SADef": {
            "value": "[variables('SADef')]"
          },
          "Size": {
            "value": "[parameters('Size')]"
          },
          "Username": {
            "value": "[parameters('Username')]"
          },
          "Password": {
            "value": "[parameters('Password')]"
          },
          "Location": {
            "value": "[variables('Location')]"
          }
        }
      }
    }
  ]
}
