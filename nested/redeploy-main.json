{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "EnvironmentPrefix": {
      "type": "String",
      "metadata": {
        "description": "Prefix for the resources, Ex five letter customer name"
      }
    },
    "EnvironmentType": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "stg",
        "tst",
        "lab",
        "qa",
        "prd"
      ],
      "metadata": {
        "description": "Type of environment"
      }
    },
    "FunctionType": {
      "type": "String",
      "defaultValue": "app",
      "allowedValues": [
        "app",
        "db",
        "web",
        "srv"
      ],
      "metadata": {
        "description": "Type of function / application"
      }
    },
    "NumberSuffix": {
      "type": "string",
      "defaultValue": "01",
      "allowedValues": [
        "01",
        "02",
        "03",
        "04",
        "05",
        "06",
        "07",
        "08",
        "09",
        "10",
        "11",
        "12"
      ],
      "metadata": {
        "description": "Sequence number for the resource"
      }
    },
    "Location": {
      "type": "String",
      "defaultValue": "West Europe",
      "allowedValues": [
        "West Europe",
        "North Europe"
      ],
      "metadata": {
        "description": "Allowed locations is West Europe and North Europe"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Local root or administrator username"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine. Must be at least 8 characters and one have at least one capital letter, one number and one special character"
      }
    },
    "windowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter"
      ],
      "metadata": {
        "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version. Allowed values: 2008-R2-SP1, 2012-Datacenter, 2012-R2-Datacenter."
      }
    },
    "ServerSize": {
      "type": "string",
      "defaultValue": "Standard_D1",
      "allowedValues": [
        "Standard_D1",
        "Standard_D2",
        "Standard_D3"
      ],
      "metadata": {
        "description": "The size and type for the VM."
      }
    }
  },
  "variables": {
    "TemplateBaseLink": "https://raw.githubusercontent.com/lavett/azure/master/nested/",
    "TemplateBaseFileName": "redeploy-new",
    "SrvBaseName": "[concat(parameters('EnvironmentPrefix'),parameters('EnvironmentType'),parameters('FunctionType'),parameters('NumberSuffix'))]",
    "BaseName": "[concat(parameters('EnvironmentPrefix'),parameters('EnvironmentType'))]",
    "StorageAccountFile": "[concat(variables('TemplateBaseLink'),variables('TemplateBaseFileName'),variables('SADef'),'.json')]",
    "NetworkSecurityGroupFile": "[concat(variables('TemplateBaseLink'),variables('TemplateBaseFileName'),variables('NSGDef'),parameters('FunctionType'),'.json')]",
    "NetworkGroupFile": "[concat(variables('TemplateBaseLink'),variables('TemplateBaseFileName'),variables('NetworkGroupDef'),'.json')]",
    "VirtualMachineFile": "[concat(variables('TemplateBaseLink'),variables('TemplateBaseFileName'),variables('VirtualMachineDef'),'.json')]",
    "VirtualMachineDef": "vm",
    "SADef": "sa",
    "NetworkGroupDef": "net",
    "NSGDef": "nsg"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "newstorageaccount",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[variables('StorageAccountFile')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "EnvironmentPrefix": {
            "value": "[parameters('EnvironmentPrefix')]"
          },
          "EnvironmentType": {
            "value": "[parameters('EnvironmentType')]"
          },
          "FunctionType": {
            "value": "[parameters('FunctionType')]"
          },
          "NumberSuffix": {
            "value": "[parameters('NumberSuffix')]"
          },
          "SADef": {
            "value": "[variables('SADef')]"
          },
          "Location": {
            "value": "[parameters('Location')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "newnetworksecuritygroup",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[variables('NetworkSecurityGroupFile')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "BaseName": {
            "value": "[parameters('BaseName')]"
          },
          "NSGDef": {
            "value": "[variables('NSGDef')]"
          },
          "SADef": {
            "value": "[variables('SADef')]"
          },
          "Location": {
            "value": "[parameters('Location')]"
          }
        }
      }
    }
  ]
}
