{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "BaseName": {
      "type": "string"
    },
    "ServerName": {
      "type": "string"
    },
    "Documentation URL": {
      "type": "string"
    },
    "NICDef": {
      "type": "string"
    },
    "SADef": {
      "type": "string"
    },
    "Size": {
      "type": "string"
    },
    "Username": {
      "type": "string"
    },
    "Password": {
      "type": "string"
    },
    "Location": {
      "type": "string"
    }
  },
  "variables": {
    "NICid": "[concat(parameters('ServerName'),parameters('NICDef'))]",
    "SAid": "[concat(parameters('ServerName'),parameters('SADef'))]",
    "DeployImage": "px01dev01s001-osdisk",
    "VHDname": "[concat('http://',variables('SAid'),'.blob.core.windows.net/','vhds','/',variables('DeployImage'),'.vhd')]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('ServerName')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('Location')]",
      "tags": {
        "Documentation URL": "[parameters('Documentation URL')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('Size')]"
        },
        "storageProfile": {
          "osDisk": {
            "name": "osdisk",
            "osType": "windows",
            "caching": "ReadWrite",
            "createOption": "Attach",
            "vhd": {
              "uri": "[variables('VHDname')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('NICid'))]"
            }
          ]
        }
      }
    }
  ]
}
