{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ServerName": {
      "type": "string"
    },
    "Confluence URL": {
      "type": "string"
    },
    "NICDef": {
      "type": "string"
    },
    "SADef": {
      "type": "string"
    },
    "Size": {
      "type": "string"
    },
    "Username": {
      "type": "string"
    },
    "Password": {
      "type": "string"
    },
    "Location": {
      "type": "string"
    }
  },
  "variables": {
    "NICid": "[concat(parameters('ServerName'),parameters('NICDef'))]",
    "SAid": "[concat(parameters('ServerName'),parameters('SADef'))]",
    "imagePublisher": "MicrosoftVisualStudio",
    "imageOffer": "Windows",
    "windowsOSVersion": "8.1-Enterprise-N",
    "OSDiskName": "osdisk1"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('ServerName')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('Location')]",
      "tags": {
        "Confluence URL": "[parameters('Confluence URL')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('Size')]"
        },
        "osProfile": {
          "computername": "[parameters('ServerName')]",
          "adminUsername": "[parameters('Username')]",
          "adminPassword": "[parameters('Password')]"
        },
        "storageProfile": {
          "osDisk": {
            "name": "osdisk",
            "osType": "windows",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "image": {
              "uri": "https://ristosa.blob.core.windows.net/vhds/win8x64.vhd"
            },
            "vhd": {
              "uri": "https://ristosa.blob.core.windows.net/vhds/osdisk.vhd"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('NICid'))]"
            }
          ]
        }
      }
    }
  ]
}
