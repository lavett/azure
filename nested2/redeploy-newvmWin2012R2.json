{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ServerName": {
      "type": "string"
    },
    "Documentation URL": {
      "type": "string"
    },
    "NICDef": {
      "type": "string"
    },
    "SADef": {
      "type": "string"
    },
    "Size": {
      "type": "string"
    },
    "Username": {
      "type": "string"
    },
    "Password": {
      "type": "string"
    },
    "Location": {
      "type": "string"
    }
  },
  "variables": {
    "NICid": "[concat(parameters('ServerName'),parameters('NICDef'))]",
    "SAid": "[concat(parameters('ServerName'),parameters('SADef'))]",
    "imagePublisher": "MicrosoftWindowsServer",
    "imageOffer": "WindowsServer",
    "windowsOSVersion": "2012-R2-Datacenter",
    "OSDiskName": "osdisk1",
    "DataDiskName": "datadisk1"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('ServerName')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('Location')]",
      "tags": {
        "Documentation URL": "[parameters('Documentation URL')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('Size')]"
        },
        "osProfile": {
          "computername": "[parameters('ServerName')]",
          "adminUsername": "[parameters('Username')]",
          "adminPassword": "[parameters('Password')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('windowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri": "[concat('http://',variables('SAid'),'.blob.core.windows.net/','vhds','/',variables('OSDiskName'),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "dataDisks": [
            {
              "name": "datadisk1",
              "diskSizeGB": "1023",
              "caching": "ReadOnly",
              "lun": 0,
              "vhd": {
                "uri": "[concat('http://',variables('SAid'),'.blob.core.windows.net/','vhds','/',variables('DataDiskName'),'.vhd')]"
              },
              "createOption": "Empty"
            }
          ],
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('NICid'))]"
            }
          ]
        }
      }
    }
  ]
}
