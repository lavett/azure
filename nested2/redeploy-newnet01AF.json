{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "BaseName": {
      "type": "String"
    },
    "ServerName": {
      "type": "string"
    },
    "NSGDef": {
      "type": "string"
    },
    "NETDef": {
      "type": "string"
    },
    "NICDef": {
      "type": "string"
    },
    "PIPDef": {
      "type": "string"
    },
    "SUBDef": {
      "type": "string"
    },
    "PIPType": {
      "type": "string"
    },
    "NETAddress": {
      "type": "string"
    },
    "SRVSubnet": {
      "type": "string"
    },
    "Location": {
      "type": "string"
    }
  },
  "variables": {
    "NETid": "VPN_AF_VNET",
    "NSGid": "[concat(parameters('ServerName'),parameters('NSGDef'))]",
    "PIPid": "[concat(parameters('ServerName'),parameters('PIPDef'))]",
    "VNETid": "/subscriptions/b44875c8-2084-42b4-889d-d5f329c82f3e/resourceGroups/AF_VPN_RG/providers/Microsoft.Network/virtualNetworks/",
    "SUBRef": "[concat(variables('VNETid'),'/subnets/',variables('SUBid'))]",
    "SUBid": "Subnet01"
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('NSGid')]",
      "location": "[parameters('Location')]",
      "properties": {
        "securityRules": [
          {
            "name": "RDP_ALL",
            "properties": {
              "description": "Port 3389",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat(parameters('ServerName'),parameters('PIPDef'))]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('Location')]",
      "properties": {
        "publicIPAllocationMethod": "[parameters('PIPType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('ServerName')]"
        }
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('ServerName'),parameters('NICDef'))]",
      "location": "[parameters('Location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', variables('PIPid'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('PIPid'))]"
              },
              "subnet": {
                "id": "[variables('SUBRef')]"
              }
            }
          }
        ]
      }
    }
  ]
}
